<mvc:View
	controllerName="star.wars.app.controller.Object"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.ui.layout.form"
	xmlns:semantic="sap.m.semantic">

	<semantic:FullscreenPage
		id="page"
		navButtonPress="onNavBack"
		showNavButton="true"
		title="{i18n>objectTitle}"
		busy="{objectView>/busy}"
		busyIndicatorDelay="{objectView>/delay}">

		<semantic:content>
			<ObjectHeader
				id="objectHeader"
				title="{NAME}"
				number="{GENDER}">
				<statuses>
				</statuses>
				<attributes>
				</attributes>
			</ObjectHeader>
			
			<IconTabBar
				expanded="true"
				class="sapUiResponsiveContentPadding">
				<items>
					<IconTabFilter
						icon="sap-icon://activity-items">
						  <f:SimpleForm>
							<core:Title text="General Information" />
							<Label text="ID"/>
							<Text text="{ID}" />
							<Label text="Species"/>
							<Text  binding="{Species}" text="{NAME}" />								
							<Label text="Mass"/>
							<Text text="{
									path: 'MASS',
									formatter: '.formatter.numberUnit'
								}
								{viewModel>/massunit}" />
							<Label text="Height"/>
							<Text text="{
									path: 'HEIGHT',
									formatter: '.formatter.numberUnit'
								}
								{viewModel>/heightunit}" />
							<Label text="Gender"/>
							<Text text="{GENDER}" />
							<Label text="Birth year"/>
							<Text text="{BIRTH_YEAR}" />	
								
							<core:Title text="Color Information" />
							<Label text="Hair color"/>
							<Text text="{HAIR_COLOR}" />
							<Label text="Skin color"/>
							<Text text="{SKIN_COLOR}" />
							<Label text="Eye color"/>
							<Text text="{EYE_COLOR}" />
						</f:SimpleForm>
					</IconTabFilter>
				</items>
			</IconTabBar>
			
 		</semantic:content>

		<semantic:sendEmailAction>
			<semantic:SendEmailAction id="shareEmail" press="onShareEmailPress"/>
		</semantic:sendEmailAction>


	</semantic:FullscreenPage>

</mvc:View>